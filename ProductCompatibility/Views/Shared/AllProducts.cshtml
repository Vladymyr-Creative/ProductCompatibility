@model ProductCompatibility.Data.Models.Product

@{    
    <div class="card flex-grow-1 m-1 p-1" style="width: 18rem;">

        <div class="d-flex justify-content-center">
            <img class="image-middle-size card-img-top" src="/img/@Model.Img" alt="@Model.Name" />
        </div>

        <div class="card-body">
            <h5 class="card-title">
                <a href="/Product/Single/@Model.Id">@Model.Name</a>
            </h5>
            <p class="card-text m-2">@Model.Description</p>
            <a href="/Product/List/@Model.Category.Name" class="text-secondary">Category: @Model.Category.Name</a>
            @*<p><a class="btn btn-primary" asp-controller="ShopCart" asp-action="AddToCart" asp-route-prodId="@Model.Id">Add to Cart</a></p>*@
        </div>
    </div>
}

