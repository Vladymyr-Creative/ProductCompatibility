@model Order

    <h3>Оформление заказа</h3>
    <div class="row">        
        <form asp-action="Checkout" method="post" class="list-group-horizontal">
            <div class="form-group">
                <label asp-for="Name"></label>
                <div class="col-md">
                    <input asp-for="Name" class="form-control" value="@Model?.Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SurName"></label>
                <div class="col-md">
                    <input asp-for="SurName" class="form-control" value="@Model?.SurName" />
                    <span asp-validation-for="SurName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <div class="col-md">
                    <input asp-for="Address" class="form-control" value="@Model?.Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="col-md">
                    <input asp-for="Email" class="form-control" value="@Model?.Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" class="btn btn-success" value="Complete order" />
        </form>
    </div>
