@model ProductsCompatibility

<div class="d-flex justify-content-center">
    <h3>Edit Products Compatibilities</h3>
</div>
<div class="row flex-column align-items-center">
    @foreach (var item in @ViewBag.viewModel.AllProdCompatibilities) {
        <div class="row flex-column align-items-center">
            <form asp-action="Edit" asp-route-id="@item.Id" method="post" class="d-flex">
                <div class="form-group d-flex align-items-center border-info">                    
                    <div class="col-md">
                        <span>@item.Product1.Name</span>
                        <input type="hidden" asp-for="Product1Id" value="@item.Product1Id">                            
                    </div>
                </div>

                <div class="form-group d-flex align-items-center border-secondary">
                    <div class="col-md">
                        <span>@item.Product2.Name</span>
                        <input type="hidden" asp-for="Product2Id" value="@item.Product2Id">
                    </div>
                </div>

                <div class="form-group">                    
                    <div class="col-md">
                        <select class="form-control" name="CompatibilityId"  value="@item.CompatibilityId">
                            @foreach (var compatibility in @ViewBag.viewModel.Compatibilities) {
                                <option value="@compatibility.Id">@compatibility.Name</option>
                            }
                        </select>                        
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <input type="submit" class="btn btn-success" style="height: 50px;" value="Edit" />
                </div>
            </form>
        </div>
    }

</div>

